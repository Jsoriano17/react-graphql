{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["dom", "dom.iterable", "esnext", "ES2020"],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "typeRoots": ["src/types/**", "types/", "node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "hooks": ["hooks"],
      "support": ["support"],
      "components": ["components"]
    },
    "jsx": "react-jsx",
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["src", "./src/**/*.{ts|tsx|js|jsx}", "src/__tests__/**/*.{ts|tsx|js|jsx}"]
}
